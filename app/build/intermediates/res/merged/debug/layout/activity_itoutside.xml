<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    tools:context="com.recluse.xicor.taskshouter.InsertTaskActivity"
    android:background="@drawable/dialog_bg">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <EditText
                    android:imeOptions="actionNext"
                    android:id="@+id/o_taskname"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Enter Task here..."
                    android:padding="15dp"
                    android:gravity="top"
                    android:background="@drawable/normal_et"
                    android:textColor="#000"
                    android:textColorHint="#797D7F"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/o_taskdate"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:hint="DATE"
                            android:editable="false"
                            android:inputType="none"
                            android:layout_marginLeft="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/normal_et"/>
                        <Button
                            android:id="@+id/o_set_taskdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:text="SET DATE"
                            android:background="@drawable/button_basic"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/o_tasktime"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:hint="TIME"
                            android:editable="false"
                            android:inputType="none"
                            android:layout_marginLeft="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/normal_et"/>
                        <Button
                            android:id="@+id/o_set_tasktime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:text="SET TIME"
                            android:background="@drawable/button_basic"
                            android:layout_marginRight="4dp"/>
                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <Spinner
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/o_tasknotif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/normal_et"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <Spinner
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/o_tasktype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/normal_et"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <TextView
                    android:id="@+id/o_interval_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#0B5345"
                    android:gravity="center"
                    android:textAlignment="center"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/o_main_insert_task"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="12dp"
        android:scaleType="center"
        android:layout_marginBottom="12dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_black_mb" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/o_speak_test"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        app:backgroundTint="#1B4F72"
        android:scaleType="center"
        android:layout_marginBottom="12dp"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_volume_up_black_speak_test" />
</android.support.design.widget.CoordinatorLayout>
